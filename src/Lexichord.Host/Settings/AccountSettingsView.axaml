<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Lexichord.Host.Settings"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="700"
             x:Class="Lexichord.Host.Settings.AccountSettingsView"
             x:DataType="vm:AccountSettingsViewModel">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24">
        <StackPanel Spacing="24">
            
            <!-- Current License Status -->
            <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Padding="16">
                <StackPanel Spacing="12">
                    <!-- Tier Badge and Label -->
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Border CornerRadius="4"
                                Padding="12,6"
                                Background="{Binding TierBadgeColor}">
                            <TextBlock Text="{Binding TierDisplayName}"
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       FontSize="14"/>
                        </Border>
                        <TextBlock Text="Current Plan"
                                   VerticalAlignment="Center"
                                   Opacity="0.7"/>
                    </StackPanel>

                    <!-- Licensee Info (if activated) -->
                    <StackPanel IsVisible="{Binding CurrentLicense.IsActivated}" Spacing="8">
                        <!-- Licensee Name -->
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="ðŸ‘¤"
                                       Width="16"
                                       Opacity="0.6"/>
                            <TextBlock Text="{Binding CurrentLicense.LicenseeName}"
                                       FontWeight="Medium"/>
                        </StackPanel>

                        <!-- Masked License Key -->
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="ðŸ”‘"
                                       Width="16"
                                       Opacity="0.6"/>
                            <TextBlock Text="{Binding CurrentLicense.MaskedLicenseKey}"
                                       Opacity="0.7"
                                       FontFamily="Consolas, Menlo, monospace"/>
                        </StackPanel>

                        <!-- Expiration Date -->
                        <StackPanel Orientation="Horizontal" Spacing="8"
                                    IsVisible="{Binding CurrentLicense.ExpirationDate, Converter={x:Static ObjectConverters.IsNotNull}}">
                            <TextBlock Text="ðŸ“…"
                                       Width="16"
                                       Opacity="0.6"/>
                            <TextBlock Text="{Binding ExpirationDisplayText}"/>
                        </StackPanel>

                        <!-- Expiration Warning -->
                        <Border Background="#FFF3CD"
                                CornerRadius="4"
                                Padding="12,8"
                                Margin="0,4,0,0"
                                IsVisible="{Binding IsExpirationWarning}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="âš ï¸" Width="16"/>
                                <TextBlock Text="Your license expires soon. Contact sales to renew."
                                           Foreground="#856404"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Core Tier Message (not activated) -->
                    <TextBlock Text="Upgrade to WriterPro or Enterprise for advanced features like AI suggestions, style analysis, and more."
                               TextWrapping="Wrap"
                               Opacity="0.7"
                               IsVisible="{Binding !CurrentLicense.IsActivated}"/>
                </StackPanel>
            </Border>

            <!-- License Activation Section -->
            <StackPanel Spacing="12">
                <TextBlock Text="Activate License"
                           FontSize="16"
                           FontWeight="SemiBold"/>

                <TextBlock Text="Enter your license key to upgrade your plan."
                           Opacity="0.7"/>

                <Grid ColumnDefinitions="*,Auto" Margin="0,8,0,0">
                    <TextBox Grid.Column="0"
                             Text="{Binding LicenseKeyInput}"
                             Watermark="XXXX-XXXX-XXXX-XXXX"
                             MaxLength="19"
                             IsEnabled="{Binding !IsValidating}"
                             FontFamily="Consolas, Menlo, monospace"/>

                    <Button Grid.Column="1"
                            Content="Activate"
                            Command="{Binding ActivateCommand}"
                            Classes="accent"
                            Margin="8,0,0,0"
                            MinWidth="100"/>
                </Grid>

                <!-- Loading Indicator -->
                <StackPanel Orientation="Horizontal"
                            Spacing="8"
                            IsVisible="{Binding IsValidating}">
                    <ProgressBar IsIndeterminate="True" Width="100" Height="4"/>
                    <TextBlock Text="Validating license..."
                               VerticalAlignment="Center"
                               Opacity="0.7"/>
                </StackPanel>

                <!-- Validation Message - Success -->
                <Border CornerRadius="4"
                        Padding="12,8"
                        Background="#D4EDDA"
                        IsVisible="{Binding IsValidationSuccess}">
                    <TextBlock Text="{Binding ValidationMessage}"
                               Foreground="#155724"
                               TextWrapping="Wrap"/>
                </Border>

                <!-- Validation Message - Error -->
                <Border CornerRadius="4"
                        Padding="12,8"
                        Background="#F8D7DA"
                        IsVisible="{Binding IsValidationError}">
                    <TextBlock Text="{Binding ValidationMessage}"
                               Foreground="#721C24"
                               TextWrapping="Wrap"/>
                </Border>
            </StackPanel>

            <!-- Deactivate Section (only when activated) -->
            <StackPanel Spacing="12" IsVisible="{Binding CurrentLicense.IsActivated}">
                <TextBlock Text="Deactivate License"
                           FontSize="16"
                           FontWeight="SemiBold"/>

                <TextBlock Text="Remove your license from this device. You can reactivate it on another device or the same device later."
                           TextWrapping="Wrap"
                           Opacity="0.7"/>

                <Button Content="Deactivate License"
                        Command="{Binding DeactivateCommand}"
                        HorizontalAlignment="Left"/>
            </StackPanel>

            <!-- Feature Availability Section -->
            <StackPanel Spacing="12">
                <TextBlock Text="Feature Availability"
                           FontSize="16"
                           FontWeight="SemiBold"/>

                <TextBlock Text="Features available with your current plan:"
                           Opacity="0.7"/>

                <ItemsControl ItemsSource="{Binding Features}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="8,12" BorderThickness="0,0,0,1"
                                    BorderBrush="{DynamicResource DividerStrokeColorDefaultBrush}">
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <!-- Check/Lock Icon -->
                                    <TextBlock Grid.Column="0"
                                               Margin="0,0,12,0"
                                               FontSize="18"
                                               Width="24"
                                               TextAlignment="Center"
                                               Text="{Binding AvailabilityIcon}"/>

                                    <!-- Feature Info -->
                                    <StackPanel Grid.Column="1" Spacing="2">
                                        <TextBlock Text="{Binding FeatureName}"
                                                   FontWeight="Medium"/>
                                        <TextBlock Text="{Binding Description}"
                                                   FontSize="12"
                                                   Opacity="0.6"/>
                                    </StackPanel>

                                    <!-- Required Tier (if not available) -->
                                    <Border Grid.Column="2"
                                            Background="{DynamicResource SubtleFillColorSecondaryBrush}"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            VerticalAlignment="Center"
                                            IsVisible="{Binding !IsAvailable}">
                                        <TextBlock Text="{Binding RequiredTier}"
                                                   FontSize="11"
                                                   Opacity="0.7"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
