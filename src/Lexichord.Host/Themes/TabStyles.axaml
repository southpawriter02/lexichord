<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════════════════════════════════════════════════════════
         LEXICHORD TAB STYLES
         Maps React TabBar/TabItem to Avalonia TabControl themes
         ═══════════════════════════════════════════════════════════════════ -->

    <!-- TabControl Theme (horizontal tabs) -->
    <ControlTheme x:Key="LexTabControl" TargetType="TabControl">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Padding" Value="0" />

        <Setter Property="Template">
            <ControlTemplate>
                <DockPanel>
                    <!-- Tab Strip -->
                    <Border DockPanel.Dock="Top"
                            BorderBrush="{DynamicResource BorderSubtleBrush}"
                            BorderThickness="0,0,0,1">
                        <ItemsPresenter x:Name="PART_ItemsPresenter"
                                        ItemsPanel="{TemplateBinding ItemsPanel}" />
                    </Border>

                    <!-- Content area -->
                    <ContentPresenter x:Name="PART_SelectedContentHost"
                                      Margin="{TemplateBinding Padding}"
                                      Content="{TemplateBinding SelectedContent}"
                                      ContentTemplate="{TemplateBinding SelectedContentTemplate}"
                                      HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />
                </DockPanel>
            </ControlTemplate>
        </Setter>

        <Setter Property="ItemsPanel">
            <ItemsPanelTemplate>
                <StackPanel Orientation="Horizontal" Spacing="4" />
            </ItemsPanelTemplate>
        </Setter>
    </ControlTheme>

    <!-- TabItem Theme -->
    <ControlTheme x:Key="LexTabItem" TargetType="TabItem">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="Margin" Value="0,0,0,-1" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Cursor" Value="Hand" />

        <Setter Property="Template">
            <ControlTemplate>
                <Border x:Name="PART_Border"
                        Background="{TemplateBinding Background}"
                        BorderThickness="0,0,0,2"
                        BorderBrush="Transparent"
                        Padding="{TemplateBinding Padding}">
                    <ContentPresenter x:Name="PART_ContentPresenter"
                                      Content="{TemplateBinding Header}"
                                      ContentTemplate="{TemplateBinding HeaderTemplate}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center" />
                </Border>
            </ControlTemplate>
        </Setter>

        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Foreground" Duration="0:0:0.15" />
            </Transitions>
        </Setter>

        <!-- Hover state -->
        <Style Selector="^:pointerover">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>

        <!-- Selected state -->
        <Style Selector="^:selected">
            <Setter Property="Foreground" Value="{DynamicResource AccentPrimaryBrush}" />
        </Style>
        <Style Selector="^:selected /template/ Border#PART_Border">
            <Setter Property="BorderBrush" Value="{DynamicResource AccentPrimaryBrush}" />
        </Style>

        <!-- Disabled state -->
        <Style Selector="^:disabled">
            <Setter Property="Opacity" Value="0.5" />
            <Setter Property="Cursor" Value="Arrow" />
        </Style>
    </ControlTheme>

    <!-- Pill-style TabControl (segmented control) -->
    <ControlTheme x:Key="PillTabControl" TargetType="TabControl">
        <Setter Property="Background" Value="{DynamicResource SurfaceElevatedBrush}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="4" />

        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}">
                    <DockPanel>
                        <ItemsPresenter x:Name="PART_ItemsPresenter"
                                        DockPanel.Dock="Top"
                                        ItemsPanel="{TemplateBinding ItemsPanel}" />

                        <ContentPresenter x:Name="PART_SelectedContentHost"
                                          Margin="0,8,0,0"
                                          Content="{TemplateBinding SelectedContent}"
                                          ContentTemplate="{TemplateBinding SelectedContentTemplate}" />
                    </DockPanel>
                </Border>
            </ControlTemplate>
        </Setter>

        <Setter Property="ItemsPanel">
            <ItemsPanelTemplate>
                <StackPanel Orientation="Horizontal" Spacing="4" />
            </ItemsPanelTemplate>
        </Setter>
    </ControlTheme>

    <!-- Pill TabItem -->
    <ControlTheme x:Key="PillTabItem" TargetType="TabItem">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="CornerRadius" Value="6" />

        <Setter Property="Template">
            <ControlTemplate>
                <Border x:Name="PART_Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}">
                    <ContentPresenter x:Name="PART_ContentPresenter"
                                      Content="{TemplateBinding Header}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center" />
                </Border>
            </ControlTemplate>
        </Setter>

        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15" />
                <BrushTransition Property="Foreground" Duration="0:0:0.15" />
            </Transitions>
        </Setter>

        <!-- Hover -->
        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="{DynamicResource SurfaceOverlayBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>

        <!-- Selected -->
        <Style Selector="^:selected">
            <Setter Property="Background" Value="{DynamicResource AccentPrimaryBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource TextOnAccentBrush}" />
        </Style>
    </ControlTheme>

    <!-- Vertical TabControl (for settings sidebar) -->
    <ControlTheme x:Key="VerticalTabControl" TargetType="TabControl">
        <Setter Property="Background" Value="Transparent" />

        <Setter Property="Template">
            <ControlTemplate>
                <DockPanel>
                    <!-- Vertical Tab Strip -->
                    <Border DockPanel.Dock="Left"
                            Width="200"
                            BorderBrush="{DynamicResource BorderSubtleBrush}"
                            BorderThickness="0,0,1,0"
                            Padding="8">
                        <ItemsPresenter x:Name="PART_ItemsPresenter"
                                        ItemsPanel="{TemplateBinding ItemsPanel}" />
                    </Border>

                    <!-- Content area -->
                    <ContentPresenter x:Name="PART_SelectedContentHost"
                                      Margin="24,0,0,0"
                                      Content="{TemplateBinding SelectedContent}"
                                      ContentTemplate="{TemplateBinding SelectedContentTemplate}" />
                </DockPanel>
            </ControlTemplate>
        </Setter>

        <Setter Property="ItemsPanel">
            <ItemsPanelTemplate>
                <StackPanel Orientation="Vertical" Spacing="4" />
            </ItemsPanelTemplate>
        </Setter>
    </ControlTheme>

    <!-- Vertical TabItem -->
    <ControlTheme x:Key="VerticalTabItem" TargetType="TabItem">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        <Setter Property="Padding" Value="12,10" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="CornerRadius" Value="6" />

        <Setter Property="Template">
            <ControlTemplate>
                <Border x:Name="PART_Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}">
                    <ContentPresenter x:Name="PART_ContentPresenter"
                                      Content="{TemplateBinding Header}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" />
                </Border>
            </ControlTemplate>
        </Setter>

        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15" />
                <BrushTransition Property="Foreground" Duration="0:0:0.15" />
            </Transitions>
        </Setter>

        <!-- Hover -->
        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="{DynamicResource SurfaceOverlayBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>

        <!-- Selected -->
        <Style Selector="^:selected">
            <Setter Property="Background" Value="{DynamicResource AccentMutedBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource AccentPrimaryBrush}" />
        </Style>
    </ControlTheme>

</ResourceDictionary>
