<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime">

    <!-- ═══════════════════════════════════════════════════════════════════
         LEXICHORD THEME - RESOURCES ONLY
         Master theme dictionary that imports all component resources.
         Styles are loaded separately via Application.Styles.
         ═══════════════════════════════════════════════════════════════════ -->

    <ResourceDictionary.MergedDictionaries>
        <!-- Color Palettes (Dark is default, Light available for switching) -->
        <ResourceInclude Source="avares://Lexichord.Host/Themes/Colors.Dark.axaml" />

        <!-- Component Resources (ControlThemes only - no bare Styles) -->
        <ResourceInclude Source="avares://Lexichord.Host/Themes/ButtonStyles.axaml" />
        <ResourceInclude Source="avares://Lexichord.Host/Themes/TextBoxStyles.axaml" />
        <ResourceInclude Source="avares://Lexichord.Host/Themes/CardStyles.axaml" />
        <ResourceInclude Source="avares://Lexichord.Host/Themes/TabStyles.axaml" />

        <!-- Icons -->
        <ResourceInclude Source="avares://Lexichord.Host/Resources/Icons.axaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- ═══════════════════════════════════════════════════════════════════
         GLOBAL RESOURCES
         Applied via StaticResource/DynamicResource bindings
         ═══════════════════════════════════════════════════════════════════ -->

    <!-- Default font family -->
    <FontFamily x:Key="DefaultFontFamily">Inter, Segoe UI, -apple-system, sans-serif</FontFamily>
    <FontFamily x:Key="InterFont">Inter, Segoe UI, -apple-system, sans-serif</FontFamily>
    <FontFamily x:Key="MonoFontFamily">JetBrains Mono, Consolas, Courier New, monospace</FontFamily>

    <!-- Typography Scale -->
    <x:Double x:Key="FontSizeXS">11</x:Double>
    <x:Double x:Key="FontSizeSM">12</x:Double>
    <x:Double x:Key="FontSizeMD">14</x:Double>
    <x:Double x:Key="FontSizeLG">16</x:Double>
    <x:Double x:Key="FontSizeXL">20</x:Double>
    <x:Double x:Key="FontSize2XL">24</x:Double>
    <x:Double x:Key="FontSize3XL">32</x:Double>

    <!-- Spacing Scale -->
    <Thickness x:Key="SpacingXS">4</Thickness>
    <Thickness x:Key="SpacingSM">8</Thickness>
    <Thickness x:Key="SpacingMD">12</Thickness>
    <Thickness x:Key="SpacingLG">16</Thickness>
    <Thickness x:Key="SpacingXL">24</Thickness>
    <Thickness x:Key="Spacing2XL">32</Thickness>

    <!-- Border Radius -->
    <CornerRadius x:Key="RadiusSM">4</CornerRadius>
    <CornerRadius x:Key="RadiusMD">6</CornerRadius>
    <CornerRadius x:Key="RadiusLG">8</CornerRadius>
    <CornerRadius x:Key="RadiusXL">12</CornerRadius>
    <CornerRadius x:Key="RadiusFull">9999</CornerRadius>

    <!-- Animation Durations -->
    <sys:TimeSpan x:Key="DurationFast">0:0:0.1</sys:TimeSpan>
    <sys:TimeSpan x:Key="DurationNormal">0:0:0.15</sys:TimeSpan>
    <sys:TimeSpan x:Key="DurationSlow">0:0:0.3</sys:TimeSpan>

</ResourceDictionary>
