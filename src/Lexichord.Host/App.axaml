<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dock="using:Dock.Avalonia.Themes.Fluent"
             x:Class="Lexichord.Host.App"
             RequestedThemeVariant="Dark">

    <!-- ═══════════════════════════════════════════════════════════════════
         LEXICHORD APPLICATION
         Main application resource configuration
         ═══════════════════════════════════════════════════════════════════ -->

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Lexichord custom theme resources (colors, fonts, ControlThemes) -->
                <ResourceInclude Source="avares://Lexichord.Host/Themes/LexichordTheme.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <!-- Base Fluent theme for unstyled controls -->
        <FluentTheme />

        <!-- v0.6.4: Dock.Avalonia Fluent theme (required for dock content display) -->
        <dock:DockFluentTheme />

        <!-- Lexichord global styles (overrides for controls) -->
        <StyleInclude Source="avares://Lexichord.Host/Themes/LexichordStyles.axaml" />
    </Application.Styles>
</Application>
