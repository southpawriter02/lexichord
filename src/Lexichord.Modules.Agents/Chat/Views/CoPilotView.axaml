<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Lexichord.Modules.Agents.Chat.ViewModels"
             x:Class="Lexichord.Modules.Agents.Chat.Views.CoPilotView"
             x:DataType="vm:CoPilotViewModel">

    <!-- ================================================================
         CoPilotView â€” Co-Pilot Chat Panel (v0.6.5c Streaming UI)
         ================================================================
         This view provides the streaming-aware chat interface with:
         - Animated typing indicator during Connecting state
         - Cancel button during active streaming
         - Auto-scrolling message list
         
         Bound to CoPilotViewModel streaming properties:
         - ShowTypingIndicator â†’ Typing dots visibility
         - CanCancel â†’ Cancel button visibility
         - InputEnabled â†’ Input field enable state
         ================================================================ -->

    <UserControl.Styles>
        <!-- Typing indicator container style -->
        <Style Selector="Border.typing-indicator">
            <Setter Property="Background" Value="{DynamicResource AccentColorBrush}"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <!-- Typing indicator dot base style -->
        <Style Selector="Border.typing-indicator Ellipse">
            <Setter Property="Width" Value="6"/>
            <Setter Property="Height" Value="6"/>
            <Setter Property="Fill" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Margin" Value="2,0"/>
        </Style>

        <!-- Dot 1 animation: offset 0% -->
        <Style Selector="Ellipse.dot1">
            <Style.Animations>
                <Animation Duration="0:0:0.9" IterationCount="Infinite">
                    <KeyFrame Cue="0%"><Setter Property="Opacity" Value="0.3"/></KeyFrame>
                    <KeyFrame Cue="33%"><Setter Property="Opacity" Value="1"/></KeyFrame>
                    <KeyFrame Cue="66%"><Setter Property="Opacity" Value="0.3"/></KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Dot 2 animation: offset 33% -->
        <Style Selector="Ellipse.dot2">
            <Style.Animations>
                <Animation Duration="0:0:0.9" IterationCount="Infinite" Delay="0:0:0.3">
                    <KeyFrame Cue="0%"><Setter Property="Opacity" Value="0.3"/></KeyFrame>
                    <KeyFrame Cue="33%"><Setter Property="Opacity" Value="1"/></KeyFrame>
                    <KeyFrame Cue="66%"><Setter Property="Opacity" Value="0.3"/></KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Dot 3 animation: offset 66% -->
        <Style Selector="Ellipse.dot3">
            <Style.Animations>
                <Animation Duration="0:0:0.9" IterationCount="Infinite" Delay="0:0:0.6">
                    <KeyFrame Cue="0%"><Setter Property="Opacity" Value="0.3"/></KeyFrame>
                    <KeyFrame Cue="33%"><Setter Property="Opacity" Value="1"/></KeyFrame>
                    <KeyFrame Cue="66%"><Setter Property="Opacity" Value="0.3"/></KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Upgrade Hint Styles (v0.6.5d) -->
        <Style Selector="Border.upgrade-hint">
            <Setter Property="Background" Value="{DynamicResource HintBackgroundBrush}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>

        <Style Selector="TextBlock.upgrade-hint-text">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Styles>



    <DockPanel>
        <!-- Status bar at the bottom -->
        <StackPanel DockPanel.Dock="Bottom" Margin="8,4">
            
            <!-- Upgrade Hint (v0.6.5d) -->
            <Border Classes="upgrade-hint"
                    IsVisible="{Binding !IsStreamingAvailable}"
                    Margin="0,0,0,4">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <PathIcon Grid.Column="0"
                              Data="{StaticResource InfoIcon}"
                              Width="14" Height="14"
                              Foreground="{DynamicResource AccentColorBrush}"/>

                    <TextBlock Grid.Column="1"
                               Text="{Binding StreamingUnavailableMessage}"
                               Classes="upgrade-hint-text"
                               Margin="8,0"/>

                    <Button Grid.Column="2"
                            Content="Learn More"
                            Classes="link-button"/>
                </Grid>
            </Border>

            <DockPanel>
                <!-- Cancel button, visible during streaming -->
                <Button Command="{Binding CancelStreamingCommand}"
                        IsVisible="{Binding CanCancel}"
                        Classes="cancel-button danger"
                        DockPanel.Dock="Left"
                        ToolTip.Tip="Stop generation">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <TextBlock Text="â¹" FontSize="12"/>
                        <TextBlock Text="Cancel"/>
                    </StackPanel>
                </Button>

                <!-- Status message -->
                <TextBlock Text="{Binding StatusMessage}"
                           DockPanel.Dock="Right"
                           VerticalAlignment="Center"
                           Opacity="0.7"
                           FontSize="12"/>
            </DockPanel>
        </StackPanel>

        <!-- Message area -->
        <Grid>
            <!-- Scrollable message list -->
            <ScrollViewer x:Name="MessageScrollViewer"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Messages would be rendered here via ItemsControl -->
                    <ItemsControl ItemsSource="{Binding Messages}">
                        <!-- Message templates defined elsewhere -->
                    </ItemsControl>

                    <!-- Typing indicator, visible only during Connecting state -->
                    <Border Classes="typing-indicator"
                            IsVisible="{Binding ShowTypingIndicator}"
                            HorizontalAlignment="Left"
                            Margin="8,4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ¤–" Margin="0,0,8,0"/>
                            <Ellipse Classes="dot1"/>
                            <Ellipse Classes="dot2"/>
                            <Ellipse Classes="dot3"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </DockPanel>

</UserControl>
