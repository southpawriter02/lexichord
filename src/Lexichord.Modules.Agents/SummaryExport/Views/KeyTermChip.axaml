<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Lexichord.Modules.Agents.SummaryExport.ViewModels"
             mc:Ignorable="d"
             d:DesignWidth="150" d:DesignHeight="30"
             x:Class="Lexichord.Modules.Agents.SummaryExport.Views.KeyTermChip"
             x:DataType="vm:KeyTermViewModel">

    <!-- Key Term Chip Component (v0.7.6c) -->
    <!-- Displays a key term with importance visualization (1-5 dots) -->

    <Border CornerRadius="4"
            Padding="8,4"
            Background="{DynamicResource Brush.Accent.Tertiary}">
        <Border.Styles>
            <Style Selector="Border:pointerover">
                <Setter Property="Opacity" Value="0.9"/>
            </Style>
        </Border.Styles>

        <StackPanel Orientation="Horizontal" Spacing="6">
            <!-- Term Text -->
            <TextBlock Text="{Binding Term}"
                       FontSize="12"
                       FontWeight="Medium"
                       VerticalAlignment="Center"/>

            <!-- Importance Dots -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="{Binding FilledDots}"
                           FontSize="8"
                           Foreground="{DynamicResource Brush.Accent.Primary}"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding EmptyDots}"
                           FontSize="8"
                           Opacity="0.3"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <ToolTip.Tip>
            <StackPanel>
                <TextBlock Text="{Binding Term}" FontWeight="Bold"/>
                <TextBlock Text="{Binding ImportancePercent, StringFormat='Importance: {0}'}"/>
            </StackPanel>
        </ToolTip.Tip>
    </Border>
</UserControl>
