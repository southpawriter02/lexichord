<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="480" d:DesignHeight="400"
        x:Class="Lexichord.Modules.Style.Views.UpgradePromptDialog"
        x:Name="Root"
        Title="Upgrade to Writer Pro"
        Width="480" Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ExtendClientAreaToDecorationsHint="False">
    
    <!-- 
    UpgradePromptDialog: Modal Dialog for License Upgrade (v0.3.1d)
    Shows feature comparison and prompts user to upgrade their license.
    -->

    <Window.Styles>
        <Style Selector="TextBlock.header">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemAccentColor}"/>
        </Style>
        <Style Selector="TextBlock.subheader">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto" Margin="24">
        
        <!-- Header Section -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,20">
            <PathIcon Data="M12,17A2,2 0 0,0 14,15C14,13.89 13.1,13 12,13A2,2 0 0,0 10,15A2,2 0 0,0 12,17M18,8A2,2 0 0,1 20,10V20A2,2 0 0,1 18,22H6A2,2 0 0,1 4,20V10C4,8.89 4.9,8 6,8H7V6A5,5 0 0,1 12,1A5,5 0 0,1 17,6V8H18M12,3A3,3 0 0,0 9,6V8H15V6A3,3 0 0,0 12,3Z"
                      Width="48" Height="48"
                      Foreground="#FFD700"
                      HorizontalAlignment="Center"/>
            <TextBlock Text="Unlock Advanced Features"
                       Classes="header"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Upgrade to Writer Pro to access fuzzy matching and more"
                       Classes="subheader"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       TextAlignment="Center"/>
        </StackPanel>

        <!-- Feature Comparison Table -->
        <ScrollViewer Grid.Row="1" Margin="0,0,0,20">
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                    CornerRadius="8"
                    Padding="16">
                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
                      ColumnDefinitions="*,80,80">
                    
                    <!-- Header Row -->
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="Feature" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,12"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" 
                               Text="Core" 
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" 
                               Text="Writer Pro" 
                               FontWeight="SemiBold"
                               Foreground="#FFD700"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12"/>
                    
                    <!-- Feature: Regex Linting -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Regex-based Linting" Margin="0,6"/>
                    <PathIcon Grid.Row="1" Grid.Column="1" 
                              Data="M21,7L9,19L3.5,13.5L4.91,12.09L9,16.17L19.59,5.59L21,7Z"
                              Width="16" Height="16"
                              Foreground="Green"
                              HorizontalAlignment="Center"/>
                    <PathIcon Grid.Row="1" Grid.Column="2" 
                              Data="M21,7L9,19L3.5,13.5L4.91,12.09L9,16.17L19.59,5.59L21,7Z"
                              Width="16" Height="16"
                              Foreground="Green"
                              HorizontalAlignment="Center"/>
                    
                    <!-- Feature: Style Guides -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Custom Style Guides" Margin="0,6"/>
                    <PathIcon Grid.Row="2" Grid.Column="1" 
                              Data="M21,7L9,19L3.5,13.5L4.91,12.09L9,16.17L19.59,5.59L21,7Z"
                              Width="16" Height="16"
                              Foreground="Green"
                              HorizontalAlignment="Center"/>
                    <PathIcon Grid.Row="2" Grid.Column="2" 
                              Data="M21,7L9,19L3.5,13.5L4.91,12.09L9,16.17L19.59,5.59L21,7Z"
                              Width="16" Height="16"
                              Foreground="Green"
                              HorizontalAlignment="Center"/>
                    
                    <!-- Feature: Fuzzy Matching -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Fuzzy Matching" Margin="0,6"/>
                    <PathIcon Grid.Row="3" Grid.Column="1" 
                              Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                              Width="16" Height="16"
                              Foreground="Red"
                              HorizontalAlignment="Center"/>
                    <PathIcon Grid.Row="3" Grid.Column="2" 
                              Data="M21,7L9,19L3.5,13.5L4.91,12.09L9,16.17L19.59,5.59L21,7Z"
                              Width="16" Height="16"
                              Foreground="Green"
                              HorizontalAlignment="Center"/>
                    
                    <!-- Feature: Fuzzy Threshold Config -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Per-Term Threshold Config" Margin="0,6"/>
                    <PathIcon Grid.Row="4" Grid.Column="1" 
                              Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                              Width="16" Height="16"
                              Foreground="Red"
                              HorizontalAlignment="Center"/>
                    <PathIcon Grid.Row="4" Grid.Column="2" 
                              Data="M21,7L9,19L3.5,13.5L4.91,12.09L9,16.17L19.59,5.59L21,7Z"
                              Width="16" Height="16"
                              Foreground="Green"
                              HorizontalAlignment="Center"/>
                    
                    <!-- Feature: Priority Support -->
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Priority Support" Margin="0,6"/>
                    <PathIcon Grid.Row="5" Grid.Column="1" 
                              Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                              Width="16" Height="16"
                              Foreground="Red"
                              HorizontalAlignment="Center"/>
                    <PathIcon Grid.Row="5" Grid.Column="2" 
                              Data="M21,7L9,19L3.5,13.5L4.91,12.09L9,16.17L19.59,5.59L21,7Z"
                              Width="16" Height="16"
                              Foreground="Green"
                              HorizontalAlignment="Center"/>
                </Grid>
            </Border>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto,Auto">
            <TextBlock Grid.Column="0"
                       Text="{Binding #Root.CurrentTierText}"
                       VerticalAlignment="Center"
                       FontSize="12"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
            
            <Button Grid.Column="1"
                    Content="Maybe Later"
                    Margin="0,0,12,0"
                    Click="OnMaybeLaterClicked"/>
            
            <Button Grid.Column="2"
                    Content="Upgrade Now"
                    Classes="accent"
                    Click="OnUpgradeNowClicked"/>
        </Grid>
    </Grid>
</Window>
