<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="400" d:DesignHeight="50"
             x:Class="Lexichord.Modules.Style.Views.LicenseRestrictionBanner"
             x:Name="Root">
    
    <!-- 
    LicenseRestrictionBanner: Informational Banner for License Restrictions (v0.3.1d)
    Displays a dismissable message when premium features are not available.
    -->

    <Border Background="#2D1F47"
            BorderBrush="#5D3F87"
            BorderThickness="1"
            CornerRadius="6"
            Padding="12,8"
            Margin="0,0,0,8"
            IsVisible="{Binding #Root.IsVisible}">
        
        <Grid ColumnDefinitions="Auto,*,Auto,Auto">
            
            <!-- Info Icon -->
            <PathIcon Grid.Column="0"
                      Data="M13,9H11V7H13M13,17H11V11H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z"
                      Width="18" Height="18"
                      Foreground="#9D7FD1"
                      Margin="0,0,10,0"
                      VerticalAlignment="Center"/>
            
            <!-- Message -->
            <TextBlock Grid.Column="1"
                       Text="{Binding #Root.Message}"
                       TextWrapping="Wrap"
                       Foreground="#E0D6F0"
                       VerticalAlignment="Center"
                       FontSize="13"/>
            
            <!-- Upgrade Button -->
            <Button Grid.Column="2"
                    Content="Upgrade"
                    Classes="accent"
                    Margin="12,0,8,0"
                    Padding="12,4"
                    FontSize="12"
                    Click="OnUpgradeClicked"/>
            
            <!-- Dismiss Button -->
            <Button Grid.Column="3"
                    ToolTip.Tip="Dismiss"
                    Padding="4"
                    Background="Transparent"
                    Click="OnDismissClicked">
                <PathIcon Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                          Width="14" Height="14"
                          Foreground="#9D7FD1"/>
            </Button>
        </Grid>
    </Border>
</UserControl>
