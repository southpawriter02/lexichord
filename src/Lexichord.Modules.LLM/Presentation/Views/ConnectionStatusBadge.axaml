<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:Lexichord.Modules.LLM.Presentation.Views"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="32"
             x:Class="Lexichord.Modules.LLM.Presentation.Views.ConnectionStatusBadge"
             x:DataType="views:ConnectionStatusBadge">

    <!-- ═══════════════════════════════════════════════════════════════════════
         CONNECTION STATUS BADGE
         Visual indicator for LLM provider connection status
         Version: v0.6.1d
         ═══════════════════════════════════════════════════════════════════════ -->

    <UserControl.Styles>
        <!-- Status indicator dot -->
        <Style Selector="Ellipse.status-dot">
            <Setter Property="Width" Value="8" />
            <Setter Property="Height" Value="8" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style Selector="Ellipse.status-dot.unknown">
            <Setter Property="Fill" Value="{DynamicResource TextMutedBrush}" />
        </Style>

        <Style Selector="Ellipse.status-dot.checking">
            <Setter Property="Fill" Value="{DynamicResource StatusInfoBrush}" />
        </Style>

        <Style Selector="Ellipse.status-dot.connected">
            <Setter Property="Fill" Value="{DynamicResource StatusSuccessBrush}" />
        </Style>

        <Style Selector="Ellipse.status-dot.failed">
            <Setter Property="Fill" Value="{DynamicResource StatusErrorBrush}" />
        </Style>

        <!-- Status text -->
        <Style Selector="TextBlock.status-text">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="6,0,0,0" />
        </Style>

        <Style Selector="TextBlock.status-text.unknown">
            <Setter Property="Foreground" Value="{DynamicResource TextMutedBrush}" />
        </Style>

        <Style Selector="TextBlock.status-text.checking">
            <Setter Property="Foreground" Value="{DynamicResource StatusInfoBrush}" />
        </Style>

        <Style Selector="TextBlock.status-text.connected">
            <Setter Property="Foreground" Value="{DynamicResource StatusSuccessBrush}" />
        </Style>

        <Style Selector="TextBlock.status-text.failed">
            <Setter Property="Foreground" Value="{DynamicResource StatusErrorBrush}" />
        </Style>

        <!-- Loading spinner animation -->
        <Style Selector="Ellipse.spinner">
            <Style.Animations>
                <Animation Duration="0:0:1" IterationCount="Infinite">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="1.0" />
                    </KeyFrame>
                    <KeyFrame Cue="50%">
                        <Setter Property="Opacity" Value="0.3" />
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="1.0" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </UserControl.Styles>

    <StackPanel Orientation="Horizontal">
        <!-- Status indicator dot -->
        <Ellipse Classes="status-dot"
                 Classes.unknown="{Binding IsUnknown}"
                 Classes.checking="{Binding IsChecking}"
                 Classes.connected="{Binding IsConnected}"
                 Classes.failed="{Binding IsFailed}"
                 Classes.spinner="{Binding IsChecking}" />

        <!-- Status text -->
        <TextBlock Classes="status-text"
                   Classes.unknown="{Binding IsUnknown}"
                   Classes.checking="{Binding IsChecking}"
                   Classes.connected="{Binding IsConnected}"
                   Classes.failed="{Binding IsFailed}"
                   Text="{Binding StatusText}" />
    </StackPanel>
</UserControl>
