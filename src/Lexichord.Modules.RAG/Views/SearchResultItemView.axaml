<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Lexichord.Modules.RAG.ViewModels"
             xmlns:controls="using:Lexichord.Modules.RAG.Controls"
             xmlns:converters="using:Lexichord.Modules.RAG.Converters"
             xmlns:contracts="using:Lexichord.Abstractions.Contracts"
             mc:Ignorable="d" d:DesignWidth="320" d:DesignHeight="180"
             x:Class="Lexichord.Modules.RAG.Views.SearchResultItemView"
             x:DataType="vm:SearchResultItemViewModel">

    <!-- =============================================================================
    File: SearchResultItemView.axaml
    Project: Lexichord.Modules.RAG
    Description: UserControl for displaying an individual search result item.
    ============================================================================= -->
    <!-- LOGIC: Displays a search result with document name, score badge, section
        heading (optional), highlighted preview text, context preview (expandable),
        and context menu for copy actions. DoubleTap triggers navigation to the
        source document.
    -->
    <!-- DEPENDENCIES:
         - v0.4.6a: SearchResultItemViewModel
         - v0.4.6b: HighlightedTextBlock, StringEqualsConverter, ScoreColor
         - v0.5.2d: Context menu with copy actions
         - v0.5.3d: ContextPreviewViewModel, expand/collapse UI, breadcrumb display
    -->

    <UserControl.Resources>
        <converters:StringEqualsConverter x:Key="StringEqualsConverter"/>
        <converters:LicenseTooltipConverter x:Key="LicenseTooltipConverter"/>
    </UserControl.Resources>

    <UserControl.Styles>
        <!-- Result Item Container -->
        <Style Selector="Border.result-item">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAltHighBrush}" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Margin" Value="0,4,0,0" />
            <Setter Property="Padding" Value="12" />
        </Style>

        <Style Selector="Border.result-item:pointerover">
            <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListLowBrush}" />
        </Style>

        <!-- Score Badge Base Style -->
        <Style Selector="Border.score-badge">
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="8,2" />
            <Setter Property="Background" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
        </Style>

        <!-- Score Badge Color Variations (v0.4.6b) -->
        <Style Selector="Border.score-badge.HighRelevance">
            <Setter Property="Background" Value="#2E7D32" /><!-- Green -->
        </Style>

        <Style Selector="Border.score-badge.MediumRelevance">
            <Setter Property="Background" Value="#F9A825" /><!-- Yellow/Amber -->
        </Style>

        <Style Selector="Border.score-badge.LowRelevance">
            <Setter Property="Background" Value="#EF6C00" /><!-- Orange -->
        </Style>

        <Style Selector="Border.score-badge.MinimalRelevance">
            <Setter Property="Background" Value="#757575" /><!-- Gray -->
        </Style>

        <!-- Document Name Style -->
        <Style Selector="TextBlock.document-name">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <!-- Section Heading Style -->
        <Style Selector="TextBlock.section-heading">
            <Setter Property="FontStyle" Value="Italic" />
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
            <Setter Property="FontSize" Value="11" />
        </Style>

        <!-- Preview Text Style -->
        <Style Selector="controls|HighlightedTextBlock.preview-text">
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumHighBrush}" />
        </Style>

        <!-- Breadcrumb Style (v0.5.3d) -->
        <Style Selector="TextBlock.breadcrumb-text">
            <Setter Property="FontStyle" Value="Italic" />
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        </Style>

        <!-- Context Separator Style (v0.5.3d) -->
        <Style Selector="Border.context-separator">
            <Setter Property="Height" Value="1" />
            <Setter Property="Background" Value="{DynamicResource SystemControlForegroundBaseLowBrush}" />
            <Setter Property="Margin" Value="0,6,0,6" />
            <Setter Property="Opacity" Value="0.5" />
        </Style>

        <!-- Context Chunk Style (v0.5.3d) -->
        <Style Selector="TextBlock.context-chunk">
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
            <Setter Property="MaxLines" Value="3" />
        </Style>

        <Style Selector="TextBlock.context-chunk.muted">
            <Setter Property="Opacity" Value="0.7" />
        </Style>

        <!-- Core Chunk Highlight Style (v0.5.3d) -->
        <Style Selector="Border.core-chunk-highlight">
            <Setter Property="Background" Value="{DynamicResource SystemControlHighlightAccentBrush}" />
            <Setter Property="Opacity" Value="0.1" />
            <Setter Property="CornerRadius" Value="2" />
            <Setter Property="Padding" Value="4" />
            <Setter Property="Margin" Value="-4,4,-4,4" />
        </Style>

        <!-- Expand Button Style (v0.5.3d) -->
        <Style Selector="Button.expand-btn">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Padding" Value="4,2" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Foreground" Value="{DynamicResource SystemAccentColor}" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <Style Selector="Button.expand-btn:pointerover">
            <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListLowBrush}" />
        </Style>

        <!-- Lock Icon Style (v0.5.3d) -->
        <Style Selector="PathIcon.lock-icon">
            <Setter Property="Width" Value="12" />
            <Setter Property="Height" Value="12" />
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
        </Style>

        <!-- Error Banner Style (v0.5.3d) -->
        <Style Selector="Border.error-banner">
            <Setter Property="Background" Value="#33FF6B6B" />
            <Setter Property="CornerRadius" Value="2" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="0,4,0,0" />
        </Style>

        <!-- Loading Indicator Style (v0.5.3d) -->
        <Style Selector="StackPanel.loading-indicator">
            <Setter Property="Margin" Value="0,8,0,4" />
        </Style>
    </UserControl.Styles>

    <Border Classes="result-item"
            Cursor="Hand"
            DoubleTapped="OnDoubleTapped">

        <!-- Context Menu (v0.5.2d) -->
        <Border.ContextMenu>
            <ContextMenu>
                <!-- Copy Citation using preferred style (Ctrl+C shortcut) -->
                <MenuItem Header="Copy Citation"
                          Command="{Binding CopyCitationCommand}"
                          InputGesture="Ctrl+C">
                    <MenuItem.Icon>
                        <PathIcon Data="M19,21H8V7H19M19,5H8A2,2 0 0,0 6,7V21A2,2 0 0,0 8,23H19A2,2 0 0,0 21,21V7A2,2 0 0,0 19,5M16,1H4A2,2 0 0,0 2,3V17H4V3H16V1Z"
                                  Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>

                <!-- Copy as... submenu for specific styles -->
                <MenuItem Header="Copy as...">
                    <MenuItem.Icon>
                        <PathIcon Data="M9,3H15V5H9V3M7,7H17V9H7V7M7,11H10V13H7V11M11,11H14V13H11V11M15,11H17V13H15V11Z"
                                  Width="16" Height="16"/>
                    </MenuItem.Icon>
                    <MenuItem Header="Inline [document.md, Â§Section]"
                              Command="{Binding CopyAsCitationStyleCommand}"
                              CommandParameter="{x:Static contracts:CitationStyle.Inline}"/>
                    <MenuItem Header="Footnote [^ref]: path:line"
                              Command="{Binding CopyAsCitationStyleCommand}"
                              CommandParameter="{x:Static contracts:CitationStyle.Footnote}"/>
                    <MenuItem Header="Markdown [Title](file://...)"
                              Command="{Binding CopyAsCitationStyleCommand}"
                              CommandParameter="{x:Static contracts:CitationStyle.Markdown}"/>
                </MenuItem>

                <Separator/>

                <!-- Copy Chunk Text -->
                <MenuItem Header="Copy Chunk Text"
                          Command="{Binding CopyChunkTextCommand}">
                    <MenuItem.Icon>
                        <PathIcon Data="M14,17H7V15H14M17,13H7V11H17M17,9H7V7H17M19,3H5C3.89,3 3,3.89 3,5V19C3,20.1 3.9,21 5,21H19C20.1,21 21,20.1 21,19V5C21,3.89 20.1,3 19,3Z"
                                  Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>

                <!-- Copy Document Path -->
                <MenuItem Header="Copy Path"
                          Command="{Binding CopyDocumentPathCommand}">
                    <MenuItem.Icon>
                        <PathIcon Data="M10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6H12L10,4Z"
                                  Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>

                <Separator/>

                <!-- Open in Editor (navigation) -->
                <MenuItem Header="Open in Editor"
                          Command="{Binding NavigateCommand}">
                    <MenuItem.Icon>
                        <PathIcon Data="M14,3V5H17.59L7.76,14.83L9.17,16.24L19,6.41V10H21V3M19,19H5V5H12V3H5C3.89,3 3,3.9 3,5V19C3,20.1 3.89,21 5,21H19C20.1,21 21,20.1 21,19V12H19V19Z"
                                  Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>
        </Border.ContextMenu>

        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto"
              ColumnDefinitions="*,Auto">

            <!-- Row 0: Document Icon + Name, Score Badge -->
            <StackPanel Grid.Row="0" Grid.Column="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <!-- Document Icon -->
                <PathIcon Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"
                          Width="14" Height="14"
                          Margin="0,0,6,0"
                          Foreground="{DynamicResource SystemAccentColor}"/>

                <!-- Document Name -->
                <TextBlock Classes="document-name"
                           Text="{Binding DocumentName}"
                           TextTrimming="CharacterEllipsis"
                           ToolTip.Tip="{Binding DocumentPath}"/>
            </StackPanel>

            <!-- Score Badge with Dynamic Color -->
            <Border Grid.Row="0" Grid.Column="1"
                    Classes="score-badge"
                    Classes.HighRelevance="{Binding ScoreColor, Converter={StaticResource StringEqualsConverter}, ConverterParameter=HighRelevance}"
                    Classes.MediumRelevance="{Binding ScoreColor, Converter={StaticResource StringEqualsConverter}, ConverterParameter=MediumRelevance}"
                    Classes.LowRelevance="{Binding ScoreColor, Converter={StaticResource StringEqualsConverter}, ConverterParameter=LowRelevance}"
                    Classes.MinimalRelevance="{Binding ScoreColor, Converter={StaticResource StringEqualsConverter}, ConverterParameter=MinimalRelevance}">
                <TextBlock Text="{Binding ScoreDisplay}"
                           Foreground="White"
                           FontSize="11"
                           FontWeight="SemiBold" />
            </Border>

            <!-- Row 1: Breadcrumb (v0.5.3d) - shown when ContextPreview has breadcrumb -->
            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                        Orientation="Horizontal"
                        Margin="0,4,0,0"
                        IsVisible="{Binding ContextPreview.HasBreadcrumb, FallbackValue=False}">
                <!-- Bookmark Icon -->
                <PathIcon Data="M17,3H7A2,2 0 0,0 5,5V21L12,18L19,21V5A2,2 0 0,0 17,3Z"
                          Width="12" Height="12"
                          Margin="0,0,4,0"
                          Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                <TextBlock Classes="breadcrumb-text"
                           Text="{Binding ContextPreview.Breadcrumb, FallbackValue=''}"
                           ToolTip.Tip="{Binding ContextPreview.Breadcrumb, FallbackValue=''}"/>
            </StackPanel>

            <!-- Row 2: Section Heading (optional, shown when no breadcrumb and has heading) -->
            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                        Orientation="Horizontal"
                        Margin="0,4,0,0"
                        IsVisible="{Binding HasSectionHeading}">
                <!-- Section Icon -->
                <PathIcon Data="M3,4H21V8H3V4M3,10H21V14H3V10M3,16H21V20H3V16Z"
                          Width="12" Height="12"
                          Margin="0,0,4,0"
                          Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                <TextBlock Classes="section-heading"
                           Text="{Binding SectionHeading}"
                           TextTrimming="CharacterEllipsis"/>
            </StackPanel>

            <!-- Row 3: Preview/Expanded Content Panel -->
            <Panel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                   Margin="0,8,0,0">

                <!-- Collapsed State: Preview Text with Query Term Highlighting (v0.4.6b) -->
                <controls:HighlightedTextBlock
                    Classes="preview-text"
                    Text="{Binding PreviewText}"
                    HighlightTerms="{Binding QueryTerms}"
                    HighlightBrush="#80FFFF00"
                    MaxLines="3"
                    IsVisible="{Binding ContextPreview.IsExpanded, Converter={x:Static BoolConverters.Not}, FallbackValue=True}"/>

                <!-- Expanded State: Full context with before/after chunks (v0.5.3d) -->
                <StackPanel IsVisible="{Binding ContextPreview.IsExpanded, FallbackValue=False}">

                    <!-- Loading State -->
                    <StackPanel Classes="loading-indicator"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                IsVisible="{Binding ContextPreview.IsLoading, FallbackValue=False}">
                        <ProgressBar Width="100" Height="4" IsIndeterminate="True"/>
                        <TextBlock Text="Loading context..."
                                   FontSize="11"
                                   Margin="8,0,0,0"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    </StackPanel>

                    <!-- Error State -->
                    <Border Classes="error-banner"
                            IsVisible="{Binding ContextPreview.HasError, FallbackValue=False}">
                        <StackPanel Orientation="Horizontal">
                            <PathIcon Data="M13,14H11V10H13M13,18H11V16H13M1,21H23L12,2L1,21Z"
                                      Width="14" Height="14"
                                      Foreground="#FF6B6B"/>
                            <TextBlock Text="{Binding ContextPreview.ErrorMessage, FallbackValue=''}"
                                       FontSize="11"
                                       Margin="8,0,0,0"
                                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Content State (when loaded) -->
                    <StackPanel IsVisible="{Binding ContextPreview.HasExpandedData, FallbackValue=False}">

                        <!-- Before Context Chunks -->
                        <ItemsControl ItemsSource="{Binding ContextPreview.ExpandedChunk.Before}"
                                      IsVisible="{Binding ContextPreview.HasPrecedingContext, FallbackValue=False}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Classes="context-chunk muted"
                                               Text="{Binding Content}"
                                               Margin="0,0,0,4"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Separator before core chunk -->
                        <Border Classes="context-separator"
                                IsVisible="{Binding ContextPreview.HasPrecedingContext, FallbackValue=False}"/>

                        <!-- Core Chunk (highlighted) -->
                        <Border Classes="core-chunk-highlight">
                            <controls:HighlightedTextBlock
                                Classes="preview-text"
                                Text="{Binding ChunkText}"
                                HighlightTerms="{Binding QueryTerms}"
                                HighlightBrush="#80FFFF00"
                                MaxLines="10"/>
                        </Border>

                        <!-- Separator after core chunk -->
                        <Border Classes="context-separator"
                                IsVisible="{Binding ContextPreview.HasFollowingContext, FallbackValue=False}"/>

                        <!-- After Context Chunks -->
                        <ItemsControl ItemsSource="{Binding ContextPreview.ExpandedChunk.After}"
                                      IsVisible="{Binding ContextPreview.HasFollowingContext, FallbackValue=False}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Classes="context-chunk muted"
                                               Text="{Binding Content}"
                                               Margin="0,4,0,0"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </Panel>

            <!-- Row 4: Action Row with Expand Button (v0.5.3d) -->
            <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,8,0,0"
                        IsVisible="{Binding HasContextPreview, FallbackValue=False}">

                <!-- Expand/Collapse Button -->
                <Button Classes="expand-btn"
                        Command="{Binding ContextPreview.ToggleExpandedCommand}"
                        ToolTip.Tip="{Binding ContextPreview.IsLicensed, Converter={StaticResource LicenseTooltipConverter}, FallbackValue='Expand to show context'}">
                    <StackPanel Orientation="Horizontal">
                        <!-- Lock Icon (shown when not licensed) -->
                        <PathIcon Classes="lock-icon"
                                  Data="M12,17A2,2 0 0,0 14,15C14,13.89 13.1,13 12,13A2,2 0 0,0 10,15A2,2 0 0,0 12,17M18,8A2,2 0 0,1 20,10V20A2,2 0 0,1 18,22H6A2,2 0 0,1 4,20V10C4,8.89 4.9,8 6,8H7V6A5,5 0 0,1 12,1A5,5 0 0,1 17,6V8H18M12,3A3,3 0 0,0 9,6V8H15V6A3,3 0 0,0 12,3Z"
                                  IsVisible="{Binding ContextPreview.ShowLockIcon, FallbackValue=False}"
                                  Margin="0,0,4,0"/>

                        <!-- Expand/Collapse Icon -->
                        <PathIcon Width="14" Height="14"
                                  Data="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"/>

                        <!-- Button Text -->
                        <TextBlock Text="{Binding ContextPreview.ExpandButtonText, FallbackValue='Show More Context'}"
                                   FontSize="11"
                                   Margin="4,0,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Refresh Button (shown when expanded and has error) -->
                <Button Classes="expand-btn"
                        Command="{Binding ContextPreview.RefreshContextCommand}"
                        ToolTip.Tip="Refresh context"
                        IsVisible="{Binding ContextPreview.HasError, FallbackValue=False}"
                        Margin="8,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <PathIcon Width="12" Height="12"
                                  Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z"/>
                        <TextBlock Text="Retry"
                                   FontSize="11"
                                   Margin="4,0,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
